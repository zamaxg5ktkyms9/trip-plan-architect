# ===================================
# Trip Plan Architect - Environment Variables
# ===================================
# All environment variables are validated using Zod schema in src/env.ts
# See src/env.ts for default values and validation rules

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Upstash Redis Configuration (optional - for rate limiting and plan storage)
# If not set, rate limiting will be disabled (dev mode)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Unsplash API Configuration (optional - for spot images)
# Get your API key from: https://unsplash.com/developers
# If not set, images will use gradient fallback
NEXT_PUBLIC_UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Rate Limit Configuration (optional, defaults shown)
# Global rate limit: requests per time window across all users
GLOBAL_RATE_LIMIT_REQUESTS=30
GLOBAL_RATE_LIMIT_WINDOW=1 h

# IP-based rate limit: requests per time window per IP address
IP_RATE_LIMIT_REQUESTS=5
IP_RATE_LIMIT_WINDOW=1 d

# Debug Mode (optional, defaults to false in production)
# Set to "true" to enable debug logging
# Defaults to true in development, false in production
NEXT_PUBLIC_IS_DEBUG=false
